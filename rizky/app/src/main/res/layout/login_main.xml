<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/otpvefiy" />


    <RelativeLayout
        android:id="@+id/lv_login"
        android:background="@drawable/sp_rectangle_root"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:hint="Username"
            android:paddingLeft="30dp" />
        <View
            android:id="@+id/v_saparator"
            android:layout_below="@+id/et_username"
            android:background="#FAE1E1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_saparator"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:paddingLeft="30dp" />




    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingLogin"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/masuk"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_login"
        android:textStyle="bold"
        android:text="LOGIN"
        android:textSize="24dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/lv_login"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_login"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangel"
        android:text="Register"
        android:textAllCaps="false" />


</RelativeLayout>